<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>

        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 15px;
            margin-top: 30px;
            background-color: #222;
            color: #fff;
            border-radius: 6px;
            overflow: hidden;
        }
        td {
            border: 1px solid #00aaff;
            padding: 12px;
            
        }
        th {
            border: 1px solid;
            padding: 12px;
            background-color: #00aaff;
            color: #000;
            text-align: right; 
        }
        td {
            text-align: justify; 
        }
        .actions {
            white-space: nowrap;
            text-align: center;
        }
        .btn {
            padding: 5px 8px;
            margin: 0 10px 0 0;
            text-decoration: none;
            border-radius: 3px;
            font-size: 12px;
        }
        .btn-primary {
            background-color: #55e923;
            color: white;
        }
        .btn-info {
            background-color: #17a2b8;
            color: white;
        }
        .btn-danger {
            background-color: #dc3545;
            color: white;
        }
        h2 {
            font-size: 16px;
            text-align: left;
            width: auto;
            margin-bottom: 0;
            font-weight: bold;
            flex-grow: 1;
        }
        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 30px 0 20px 0;
        }
        .header-container a {
            margin-left: 10px;
        }
    </style>
    
</head>
<body>
    <%- include('../partials/header') %>

    <main class="container">
        <div class="header-container">
            <h2>Lista de Empleados</h2>
            <a href="/empleados/registrar" class="btn btn-primary">Registrar un nuevo empleado</a>
        </div>

        <% if (typeof success !== 'undefined') { %>
            <div style="color: green; margin: 10px 0;"><%= success %></div>
        <% } %>

        <% if (typeof error !== 'undefined') { %>
            <div style="color: red; margin: 10px 0;"><%= error %></div>
        <% } %>

        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Cédula</th>
                    <th>Departamento</th>
                    <th>Especialidad</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% empleados.forEach(empleado => { %>
                    <tr>
                        <td><%= empleado.id_empleado %></td>
                        <td><%= empleado.nombre %></td>
                        <td><%= empleado.apellido %></td>
                        <td><%= empleado.cedula %></td>
                        <td><%= empleado.departamento %></td>
                        <td><%= empleado.especialidad %></td>
                        <td class="actions">
                            <a href="/empleados/editar/<%= empleado.id_empleado %>" class="btn btn-info">Editar</a>
                            <a href="/empleados/ver/<%= empleado.id_empleado %>" class="btn btn-primary">Ver</a>
                            <a href="/empleados/eliminar/<%= empleado.id_empleado %>" class="btn btn-danger" onclick="return confirm('¿Está seguro de eliminar este empleado?')">Eliminar</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>