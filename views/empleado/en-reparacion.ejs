            <script>
                // Funciones para mostrar/ocultar formularios
                function mostrarFormulario(id) {
                    // Ocultar todos los formularios primero
                    document.querySelectorAll('.form-completar').forEach(form => {
                        form.classList.add('hidden');
                    });
                    // Mostrar el formulario solicitado
                    document.getElementById(id).classList.remove('hidden');
                }

                function ocultarFormulario(id) {
                    document.getElementById(id).classList.add('hidden');
                }

                // Cierra los formularios al hacer click fuera de ellos
                document.addEventListener('click', function (event) {
                    const forms = document.querySelectorAll('.form-completar:not(.hidden)');
                    forms.forEach(form => {
                        if (!form.contains(event.target)) {
                            const isButton = event.target.closest('[onclick*="mostrarFormulario"]');
                            if (!isButton) {
                                form.classList.add('hidden');
                            }
                        }
                    });
                });

                // Validación en tiempo real
                document.addEventListener('DOMContentLoaded', function () {
                    document.querySelectorAll('form').forEach(form => {
                        form.addEventListener('submit', function (e) {
                            let isValid = true;

                            form.querySelectorAll('[required]').forEach(field => {
                                if (!field.value.trim()) {
                                    field.classList.add('is-invalid');
                                    isValid = false;
                                }
                            });

                            if (!isValid) {
                                e.preventDefault();
                                alert('Por favor complete todos los campos requeridos');
                            }
                        });

                        // Validación en tiempo real
                        form.querySelectorAll('[required]').forEach(field => {
                            field.addEventListener('input', function () {
                                if (this.value.trim()) {
                                    this.classList.remove('is-invalid');
                                }
                            });
                        });
                    });
                });
            </script>
