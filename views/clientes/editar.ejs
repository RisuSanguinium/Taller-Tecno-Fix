<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        form div {
            margin-bottom: 15px;
        }
        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }
        input, select {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        .actions {
            margin-top: 20px;
        }
        .btn {
            padding: 8px 15px;
            text-decoration: none;
            border-radius: 4px;
            margin-right: 10px;
            cursor: pointer;
        }
        .btn-primary {
            background-color: #007bff;
            color: white;
            border: none;
        }
        .btn-secondary {
            background-color: #6c757d;
            color: white;
            border: none;
        }
    </style>
</head>
<body>
    <%- include('../partials/header') %>

    <main class="container">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <h2>Editar Cliente</h2>
            <a href="/clientes/ver/<%= cliente.id_cliente %>" class="btn btn-secondary">Cancelar</a>
        </div>

        <% if (typeof error !== 'undefined') { %>
            <div style="color: red; margin: 10px 0;"><%= error %></div>
        <% } %>

        <form action="/clientes/editar/<%= cliente.id_cliente %>" method="POST">
            <div>
                <label>Nombre:</label>
                <input type="text" name="nombre" value="<%= cliente.nombre %>" required>
            </div>
            
            <div>
                <label>Apellido:</label>
                <input type="text" name="apellido" value="<%= cliente.apellido %>" required>
            </div>
            
            <div>
                <label>Cédula:</label>
                <input type="text" name="cedula" value="<%= cliente.cedula %>" required>
            </div>
            
            <div>
                <label>Teléfono:</label>
                <input type="text" name="telefono" value="<%= cliente.telefono %>">
            </div>
            
            <div>
                <label>Departamento:</label>
                <input type="text" name="departamento" value="<%= cliente.departamento %>">
            </div>
            
            <div>
                <label>Puesto:</label>
                <input type="text" name="puesto" value="<%= cliente.puesto %>">
            </div>
            
            <div>
                <label>Fecha de ingreso:</label>
                <input type="date" name="fecha_ingreso" value="<%= cliente.fecha_ingreso.toISOString().split('T')[0] %>">
            </div>
            
            <div>
                <label>Email:</label>
                <input type="email" name="email" value="<%= cliente.email %>" required>
            </div>
            
            <div class="actions">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a href="/clientes/ver/<%= cliente.id_cliente %>" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>