<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        .actions {
            white-space: nowrap;
        }
        .btn {
            padding: 5px 10px;
            margin: 0 2px;
            text-decoration: none;
            border-radius: 3px;
            font-size: 14px;
        }
        .btn-primary {
            background-color: #007bff;
            color: white;
        }
        .btn-info {
            background-color: #17a2b8;
            color: white;
        }
        .btn-danger {
            background-color: #dc3545;
            color: white;
        }
    </style>
</head>
<body>
    <%- include('../partials/header') %>

    <main class="container">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <h2>Lista de Clientes</h2>
        </div>

        <% if (typeof success !== 'undefined') { %>
            <div style="color: green; margin: 10px 0;"><%= success %></div>
        <% } %>

        <% if (typeof error !== 'undefined') { %>
            <div style="color: red; margin: 10px 0;"><%= error %></div>
        <% } %>

        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Cédula</th>
                    <th>Departamento</th>
                    <th>Puesto</th>
                    <th>Email</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% clientes.forEach(cliente => { %>
                    <tr>
                        <td><%= cliente.id_cliente %></td>
                        <td><%= cliente.nombre %></td>
                        <td><%= cliente.apellido %></td>
                        <td><%= cliente.cedula %></td>
                        <td><%= cliente.departamento %></td>
                        <td><%= cliente.puesto %></td>
                        <td><%= cliente.email %></td>
                        <td class="actions">
                            <a href="/clientes/editar/<%= cliente.id_cliente %>" class="btn btn-info">Editar</a>
                            <a href="/clientes/ver/<%= cliente.id_cliente %>" class="btn btn-primary">Ver</a>
                            <a href="/clientes/eliminar/<%= cliente.id_cliente %>" class="btn btn-danger" onclick="return confirm('¿Está seguro de eliminar este cliente?')">Eliminar</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>