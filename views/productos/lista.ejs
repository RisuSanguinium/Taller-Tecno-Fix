<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        .actions {
            white-space: nowrap;
        }
        .btn {
            padding: 5px 10px;
            margin: 0 2px;
            text-decoration: none;
            border-radius: 3px;
            font-size: 14px;
        }
        .btn-primary {
            background-color: #007bff;
            color: white;
        }
        .btn-success {
            background-color: #28a745;
            color: white;
        }
        .btn-info {
            background-color: #17a2b8;
            color: white;
        }
        .btn-danger {
            background-color: #dc3545;
            color: white;
        }
        .status-available { color: green; }
        .status-assigned { color: orange; }
        .status-repair { color: #ffc107; }
        .status-discarded { color: #6c757d; }
        .status-lost { color: #dc3545; }
    </style>
</head>
<body>
    <%- include('../partials/header') %>

    <main class="container">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <h2>Lista de Productos</h2>
            <a href="/productos/registrar" class="btn btn-primary">Agregar Producto</a>
        </div>

        <% if (typeof success !== 'undefined') { %>
            <div style="color: green; margin: 10px 0;"><%= success %></div>
        <% } %>

        <% if (typeof error !== 'undefined') { %>
            <div style="color: red; margin: 10px 0;"><%= error %></div>
        <% } %>

        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Categoría</th>
                    <th>N° Serie</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% productos.forEach(producto => { %>
                    <tr>
                        <td><%= producto.id_producto %></td>
                        <td><%= producto.nombre %></td>
                        <td><%= producto.marca || 'N/A' %></td>
                        <td><%= producto.modelo || 'N/A' %></td>
                        <td><%= producto.categoria_nombre || 'Sin categoría' %></td>
                        <td><%= producto.numero_serie || 'N/A' %></td>
                        <td>
                            <% if (producto.id_estado === 1) { %>
                                <span class="status-available">Disponible</span>
                            <% } else if (producto.id_estado === 2) { %>
                                <span class="status-assigned">Asignado</span>
                            <% } else if (producto.id_estado === 3) { %>
                                <span class="status-repair">En reparación</span>
                            <% } else if (producto.id_estado === 4) { %>
                                <span class="status-discarded">Descartado</span>
                            <% } else if (producto.id_estado === 5) { %>
                                <span class="status-lost">Perdido</span>
                            <% } else { %>
                                <span>Desconocido</span>
                            <% } %>
                        </td>
                        <td class="actions">
                            <a href="/productos/ver/<%= producto.id_producto %>" class="btn btn-info">Ver</a>
                            <a href="/productos/editar/<%= producto.id_producto %>" class="btn btn-primary">Editar</a>
                            <a href="/productos/asignar/<%= producto.id_producto %>" class="btn btn-success">Asignar</a>
                            <a href="/productos/eliminar/<%= producto.id_producto %>" class="btn btn-danger" onclick="return confirm('¿Está seguro de eliminar este producto?')">Eliminar</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>