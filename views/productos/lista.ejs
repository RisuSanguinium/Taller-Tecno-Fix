<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <style>
        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 15px;
            margin-top: 30px;
            background-color: #222;
            color: #fff;
            border-radius: 6px;
            overflow: hidden;
        }

        th,
        td {
            border: 1px solid #00aaff;
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #00aaff;
            color: #000;
            text-align: center;
        }

        td {
            text-align: justify;
        }

        .actions {
            white-space: nowrap;
            text-align: center;
        }

        .btn {
            padding: 5px 8px;
            margin: 0 10px 0 0;
            text-decoration: none;
            border-radius: 3px;
            font-size: 12px;
        }

        .btn-primary {
            background-color: #55e923;
            color: white;
        }

        .btn-info {
            background-color: #17a2b8;
            color: white;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

        h2 {
            font-size: 16px;
            text-align: left;
            width: auto;
            margin-bottom: 0;
            font-weight: bold;
            flex-grow: 1;
        }

        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 30px 0 20px 0;
        }

        .header-container a {
            margin-left: 10px;
        }

        .btn-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            margin-top: 20px;
        }
    </style>
</head>

<body>
    <%- include('../partials/header') %>

        <main class="container">
            <div class="btn-container">
                <h2>Lista de Productos</h2>
                <a href="/productos/registrar" class="btn btn-primary">Agregar Producto</a>
            </div>

            <% if (typeof success !=='undefined' ) { %>
                <div class="success-message">
                    <%= success %>
                </div>
                <% } %>

                    <% if (typeof error !=='undefined' ) { %>
                        <div class="error-message">
                            <%= error %>
                        </div>
                        <% } %>

                            <table>
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nombre</th>
                                        <th>Marca</th>
                                        <th>Modelo</th>
                                        <th>Categoría</th>
                                        <th>N° Serie</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% productos.forEach(producto=> { %>
                                        <tr>
                                            <td>
                                                <%= producto.id_producto %>
                                            </td>
                                            <td>
                                                <%= producto.nombre %>
                                            </td>
                                            <td>
                                                <%= producto.marca || 'N/A' %>
                                            </td>
                                            <td>
                                                <%= producto.modelo || 'N/A' %>
                                            </td>
                                            <td>
                                                <%= producto.categoria_nombre || 'Sin categoría' %>
                                            </td>
                                            <td>
                                                <%= producto.numero_serie || 'N/A' %>
                                            </td>
                                            <td class="actions">
                                                <a href="/productos/ver/<%= producto.id_producto %>"
                                                    class="btn btn-info">Ver</a>
                                                <a href="/productos/editar/<%= producto.id_producto %>"
                                                    class="btn btn-primary">Editar</a>
                                                <a href="/productos/asignar/<%= producto.id_producto %>"
                                                    class="btn btn-success">Asignar</a>
                                                <a href="/productos/eliminar/<%= producto.id_producto %>"
                                                    class="btn btn-danger"
                                                    onclick="return confirm('¿Está seguro de eliminar este producto?')">Eliminar</a>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
        </main>

        <%- include('../partials/footer') %>
</body>

</html>